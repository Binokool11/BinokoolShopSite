@model ShopCartIndexViewModel
@{
    decimal totalPrice = 0;
}

<div>
    <h2>Ваша корзина</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <td>Название</td>
                <td>Количество</td>
                <td>Цена</td>
            </tr>
        </thead>
        @foreach (var item in Model.ShopCart.ShopCartItems)
        {
            totalPrice += item.Guitar.Price * item.Quantity;
            <tr>
                <td>@item.Guitar.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Guitar.Price</td>
            </tr>
        }
    </table>
    <div class="mb-2 bg-warning">Итого: @totalPrice.ToString("c")</div>
    <p><a href="@ViewBag.OrderingView" class="btn btn-warning">Оформить заказ</a></p>
    <a href="@ViewBag.Main" class="btn btn-warning">Продолжить покупку</a>
</div>